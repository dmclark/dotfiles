function manview {
    man -t $1 | open -f -a /Applications/Preview.app
}

function take {
    mkdir -p $1
    cd $1
}

function tp {
    tmux new-session "teamocil $1"
}

function p {
    if [[ -a composer.json && -d web ]]; then
        tmux new-session "teamocil sf";
    fi

    if [[ -a composer.json && ! -d web ]]; then
        tmux new-session "teamocil php";
    fi

    if [[ ! -a composer.json && ! -d web ]]; then
        tmux new-session "teamocil generic";
    fi
}
